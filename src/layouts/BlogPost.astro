---
// Keep your existing imports
---

<main>
	<article class="terminal-container">
	  <div class="terminal-header">
		<div class="terminal-title">~/posts/{title}</div>
	  </div>
	  <div class="terminal-content">
		<div class="metadata">
		  <span class="prompt">$</span> 
		  <span class="command">date</span>
		  <span class="output"><FormattedDate date={pubDate} /></span>
		</div>
		<div class="content">
		  <slot />
		</div>
	  </div>
	</article>
  </main>
  
  <style>
	.terminal-container {
	  border: 1px solid var(--accent);
	  border-radius: 4px;
	  overflow: hidden;
	}
  
	.terminal-header {
	  background: var(--accent);
	  padding: 0.5rem 1rem;
	  color: var(--background);
	}
  
	.terminal-content {
	  padding: 1rem;
	}
  
	.metadata {
	  border-bottom: 1px dashed var(--secondary);
	  padding-bottom: 1rem;
	  margin-bottom: 1rem;
	}
  
	.prompt {
	  color: var(--accent);
	}
  
	.command {
	  color: var(--link);
	}
  
	.output {
	  color: var(--text);
	  margin-left: 1rem;
	}
  </style>
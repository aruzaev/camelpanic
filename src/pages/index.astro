---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main class="container mx-auto p-8">
			<div class="terminal-container max-w-3xl mx-auto">
				<div class="terminal-header">
					<span class="terminal-title">~/home</span>
				</div>
				<div class="terminal-content">
					<div class="command-line">
						<span class="prompt">$</span>
						<span class="command">whoami</span>
					</div>
					<div class="output mb-8">
						<h1 class="text-2xl font-bold mb-4">Hey, I'm Ants :D</h1>
						<p class="mb-4">
							I'm a 21-year-old computer programming student from Toronto, Canada. 
							This is my digital garden where I share my thoughts on everything from programming 
							and technology to life lessons and personal experiences.
						</p>
						<p>
							Think of this space as a collection of ramblings, discoveries, and learnings 
							as I navigate through the world of software development and life in general.
						</p>
					</div>

					<div class="command-line">
						<span class="prompt">$</span>
						<span class="command">ls -la ./links</span>
					</div>
					<div class="output">
						<ul class="link-list">
							<li>
								<span class="date">drwxr-xr-x</span>
								<a href="/blog" class="filename">blog/</a>
								<span class="description">- My thoughts and experiences</span>
							</li>
				<!--			<li>
								<span class="date">drwxr-xr-x</span>
								<a href="https://your-portfolio-url.com" class="filename">portfolio/</a>
								<span class="description">- My projects and work</span>
							</li> -->
							<li>
								<span class="date">drwxr-xr-x</span>
								<a href="https://github.com/aruzaev" class="filename">github/</a>
								<span class="description">- My code and contributions</span>
							</li>
						</ul>
					</div>
				</div>
			</div>
		</main>
		<Footer />
	</body>
</html>

<style>
	.mb-4 {
		margin-bottom: 1rem;
	}

	.mb-8 {
		margin-bottom: 2rem;
	}

	.text-2xl {
		font-size: 1.5rem;
	}

	.font-bold {
		font-weight: 700;
	}

	.link-list {
		list-style: none;
		padding: 0;
	}

	.link-list li {
		display: flex;
		gap: 1rem;
		padding: 0.25rem 0;
		align-items: center;
	}

	.date {
		color: var(--secondary);
		font-size: 0.9rem;
	}

	.description {
		color: var(--secondary);
	}

	.command-line {
		margin: 1rem 0;
	}

	.output {
		padding-left: 1rem;
	}
</style>

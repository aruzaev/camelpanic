---
import type { SanityDocument } from "@sanity/client";
import { sanityClient } from "sanity:client";
import BaseHead from '../../components/BaseHead.astro';
import { useLiveQuery } from "@sanity/astro";

const POSTS_QUERY = `*[
  _type == "post"
  && defined(slug.current)
]|order(publishedAt desc)[0...12]{_id, title, slug, publishedAt}`;

const posts = await useLiveQuery(POSTS_QUERY);
---

<html>
  <head>
    <BaseHead title="Blog" description="Latest posts" />
    <script>
      // Enable live updates
      window.addEventListener('astro:sanity:change', () => {
        window.location.reload();
      });
    </script>
  </head>
  <body>
    <main class="container mx-auto p-8">
      <div class="terminal-container max-w-3xl mx-auto">
        <div class="terminal-header">
          <span class="terminal-title">~/blog</span>
        </div>
        <div class="terminal-content">
          <div class="command-line">
            <span class="prompt">$</span>
            <span class="command">ls -la</span>
          </div>
          <div class="output">
            {posts.map((post) => (
              <div class="file-entry">
                <span class="date">{new Date(post.publishedAt).toLocaleDateString()}</span>
                <a href={`/blog/${post.slug.current}`} class="filename">
                  {post.title}
                </a>
              </div>
            ))}
          </div>
          <div class="command-line mt-8">
            <span class="prompt">$</span>
            <a href="/" class="command">cd ~</a>
          </div>
        </div>
      </div>
    </main>
  </body>
</html>

<style>
  body {
    background-color: #1c1c1c;
    color: #b5bd68;
    font-family: 'JetBrains Mono', monospace;
  }

  .terminal-container {
    border: 1px solid #373b41;
    border-radius: 4px;
    overflow: hidden;
  }

  .terminal-header {
    background: #373b41;
    padding: 0.5rem 1rem;
    color: #c5c8c6;
  }

  .terminal-content {
    padding: 1rem;
  }

  .command-line {
    margin-bottom: 1rem;
  }

  .prompt {
    color: #8abeb7;
    margin-right: 0.5rem;
  }

  .command {
    color: #b5bd68;
  }

  .file-entry {
    display: flex;
    gap: 1rem;
    padding: 0.25rem 0;
  }

  .date {
    color: #707880;
    min-width: 100px;
  }

  .filename {
    color: #81a2be;
    text-decoration: none;
  }

  .filename:hover {
    text-decoration: underline;
  }

  .command-line {
    margin: 1rem 0;
  }

  .mt-8 {
    margin-top: 2rem;
  }

  .prompt {
    color: var(--accent);
    margin-right: 0.5rem;
  }

  .command {
    color: var(--link);
    text-decoration: none;
  }

  .command:hover {
    text-decoration: underline;
  }
</style>
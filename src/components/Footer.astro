---
const today = new Date();
---

<footer class="container mx-auto p-4 mb-8">
	<div class="terminal-container max-w-3xl mx-auto">
		<div class="terminal-header">
			<span class="terminal-title">~/contact</span>
		</div>
		<div class="terminal-content">
			<div class="command-line">
				<span class="prompt">$</span>
				<span class="command">echo $CONTACT_INFO</span>
			</div>
			<div class="output">
				<div class="social-links">
					<a href="https://github.com/aruzaev" target="_blank">github</a>
					<span class="separator">|</span>
	<!--				<a href="https://linkedin.com/in/yourusername" target="_blank">linkedin</a> -->
					<!-- <span class="separator">|</span> -->
					<a href="mailto:ruzaev.artem21@gmail.com">email</a>
				</div>
				<div class="copyright">
					&copy; {today.getFullYear()} Artem. All rights reserved.
				</div>
			</div>
		</div>
	</div>
</footer>

<style>
	.social-links {
		display: flex;
		gap: 1rem;
		align-items: center;
		justify-content: center;
		margin-bottom: 1rem;
	}

	.separator {
		color: var(--secondary);
	}

	.copyright {
		text-align: center;
		color: var(--secondary);
		font-size: 0.9rem;
	}

	.output {
		margin-top: 1rem;
	}
</style>
